@model Mvc.Ux.Demos.Models.Demo.CustomerListViewModel

<form method="post">
    <div class="container">
        <h2><b>MOD 06 ::</b> Being Tidy and Clean with Drop-down Content</h2>
        <div style="margin-top: 60px"></div>
        <nav class="navbar navbar-default" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <p class="navbar-brand" >List of customers</p> 
                </div>
                <ul class="nav navbar-nav" style="margin-left: 20px">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" 
                           data-toggle="dropdown" 
                           role="button">Operating on behalf of <i class="fa fa-chevron-down"></i>
                        </a>
                        <ul class="dropdown-menu" role="menu" id="onBehalfMenu">
                            @Html.Partial("pv_OnBehalfOfCustomers")
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="container">
            <div class="col-md-6" id="listOfCustomers">
                @Html.Partial("pv_ListOfCustomers")
            </div>
        </div>
    </div>
</form>

<script type="text/javascript">
    function d(id) {
        var url = "/demo/d/";
        $.post(url, { id: id })
            .done(function (response) {
                var chunks = StarterKit.processMultipleAjaxResponse(response);
                $("#listOfCustomers").html(chunks[0]);
                $("#onBehalfMenu").html(chunks[1]);
            });
    }
</script>
@model IList<Mvc.Ux.Demos.Backend.Model.Country>

@{ var isFirst = true; }
@foreach (var country in Model)
{
    var css = isFirst ? "bg-info" : "";
    <tr class="@css" data-id="@country.CountryCode">
        <td>@country.CountryName</td>
        <td>@country.Capital</td>
        <td><span class="text-muted">@country.ContinentName</span></td>
    </tr>

    isFirst = false;
}


